<div class="search-bar">
  <span class="material-symbols-rounded leading-icon"> search </span>

  <img
    src="/images/logo.svg"
    width="97"
    height="24"
    alt="Musify Logo"
    class="logo"
    data-logo
  />
  <form action="/search" method="post" class="search-form">
    <label for="search" class="sr-only">What do you want to listen to?</label>
    <input
      type="search"
      name="query"
      id="search"
      placeholder="What do you want to listen to?"
      value="<%= locals.query %>"
      class="search-field body-large"
      required
      data-search-field
    />
  </form>

  <% const image = locals.images ? locals.images.find(item => item.width === 64) : null; %>
  <% const url = image ? image.url : '/images/avatar.png'; %>
  <% const width = image ? image.width : 30; %>
  <% const height = image ? image.height : 30; %>

  <div class="menu-wrapper" data-menu-wrapper>
    <button
      class="icon-btn"
      aria-label="My Profile"
      data-ripple
      data-menu-toggler
    >
      <img
        src="<%= url %>"
        alt="<%= locals.display_name %> Profile"
        width="<%= width %>"
        height="<%= height %>"
        class="avatar"
      />
      <div class="state-layer"></div>
    </button>

    <%- include('./menu') %>
    
  </div>
</div>
